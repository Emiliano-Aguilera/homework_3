{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build Ejercicio 1",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/ex1/src/*",
                "-I",
                "${workspaceFolder}/ex1/include/",
                "-o",
                "${workspaceFolder}/build/bin/main1",
                "-Wextra",
                "-Wall",
                "-Werror",
                "-std=c++23"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
