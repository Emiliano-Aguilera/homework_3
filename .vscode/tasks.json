{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build Ejercicio 1",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/ex1/*.cpp",
                "-I",
                "${workspaceFolder}/include/ex1/",
                "-o",
                "${workspaceFolder}/build/ex1/main1",
                "-Wextra",
                "-Wall",
                "-Werror",
                "-std=c++23"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
